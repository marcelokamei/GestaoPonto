@model GestaoPonto.Models.Colaborador
@{
    ViewData["Title"] = "Editar Colaborador";
}
<h1>@ViewData["Title"]</h1>
<br />
<form asp-controller="Colaborador" asp-action="Editar" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdentityUserId" />
    <div class="mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required />
        <div class="invalid-feedback">
            O nome é obrigatório.
        </div>
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <div class="invalid-feedback">
            O email deve ser válido.
        </div>
    </div>
    <div class="mb-3">
        <label for="Senha" class="form-label">Senha</label>
        <input asp-for="Senha" class="form-control" type="password" required />
        <div class="invalid-feedback">
            A senha é obrigatória.
        </div>
    </div>
    <div class="mb-3">
        <label for="Role" class="form-label">Função</label>
        <select asp-for="Role" class="form-select" required>
            <option value="">Selecione</option>
            <option value="Admin">Admin</option>
            <option value="Colaborador">Colaborador</option>
        </select>
        <div class="invalid-feedback">
            A função é obrigatória.
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Salvar</button>
</form>
<br />
<a class="btn btn-secondary" asp-controller="Colaborador" asp-action="Index" role="button">Voltar</a>
