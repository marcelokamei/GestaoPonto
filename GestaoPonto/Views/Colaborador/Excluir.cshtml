@model GestaoPonto.Models.Colaborador
@{
    ViewData["Title"] = "Excluir Colaborador";
}
<h1>Tem certeza que deseja excluir este colaborador?</h1>
<p>Nome: @Model.Nome</p>
<p>Email: @Model.Email</p>

<form asp-action="Excluir" method="post">
    <div class="card-footer">
        <button type="submit" class="btn btn-danger">Sim, Excluir</button>
        <a href="/Colaborador/Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>


