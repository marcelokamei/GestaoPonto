@model IEnumerable<GestaoPonto.Models.RegistoPonto>

@{
	ViewData["Title"] = "Meus Registos";
    var currentPage = ViewData["CurrentPage"] as int? ?? 1;
    var pageSize = ViewData["PageSize"] as int? ?? 10;
    var totalPages = ViewData["TotalPages"] as int? ?? 1;

}

<h2>Meus Registos</h2>
<br />
<div class="container">
    
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Data e Hora</th>
                <th>Tipo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var registo in Model)
            {
                <tr>
                    <td>@registo.DataHora</td>
                    <td>@registo.Tipo</td>
                </tr>
            }
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="MeusRegistos" asp-route-pageNumber="@(currentPage - 1)" asp-route-pageSize="@pageSize">Anterior</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(currentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="MeusRegistos" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="MeusRegistos" asp-route-pageNumber="@(currentPage + 1)" asp-route-pageSize="@pageSize">Próximo</a>
                    </li>
                    <li class="page-item @(currentPage == totalPages ? "active" : "")">
                        <a href="/Colaborador/PainelColaborador" class="btn btn-primary">Voltar</a>
                    </li>


                    
                </ul>
            </nav>
        </tbody>
   
    </table>

 
</div>